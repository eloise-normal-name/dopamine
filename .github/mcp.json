{
  "mcpServers": {
    "github-projects": {
      "type": "local",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GH_TOKEN",
        "ghcr.io/marioalvial/gh-project-manager-mcp:latest"
      ],
      "env": {
        "GH_TOKEN": "COPILOT_MCP_GH_TOKEN"
      },
      "tools": [
        "create_issue",
        "get_issue",
        "list_issues",
        "close_issue",
        "edit_issue",
        "create_project_field",
        "list_project_fields",
        "add_project_item",
        "edit_project_item",
        "list_project_items",
        "view_project",
        "create_project_item"
      ]
    }
  }
}
